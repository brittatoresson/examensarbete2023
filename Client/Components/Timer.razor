
<MudSlider @bind-Value="@Minutes" Max="120" @onclick="UpdateMinutesValue">Välj antal minuter: @Minutes min</MudSlider>

@code {
    [Parameter]
    public int Minutes { get; set; }
    [Parameter]
    public bool Disable { get; set; }

    //Two-way binidng behövs för att uppdatera kompoentet/värder i parentkomponenter https://blazor-university.com/components/two-way-binding/
    [Parameter]
    public EventCallback<int> MinutesChanged { get; set; }

    async Task UpdateMinutesValue()
    {
        await MinutesChanged.InvokeAsync(Minutes);
    }
     

}
